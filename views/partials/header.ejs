<h1>Fara Clothing Store</h1>

<% if (user) { %>
  <p> Hi <%= user.name %></p>

  
  <a href="/products">Click this link to view your products.</a>
  <a href="/market">Click this link to view products published in the market</a>

  <br>
  <br>


  <form method="POST" action="/sessions/logoff">
  <input type="hidden" name="_csrf" value="<%= _csrf %>">
  <button>Logoff</button>
  </form>
<% } %>

<% if (errors) {
   errors.forEach((err) => { %>
     <div>
       Error: <%= err %>
     </div>
   <% })
 } %>
 
 <% if (info) {
   info.forEach((msg) => { %>
     <div>
       Info: <%= msg %>
     </div>
   <% })
 } %>
<hr />